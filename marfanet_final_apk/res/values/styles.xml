<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (uses Material 3) -->
    <style name="Theme.MarFaNet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/gold_500</item>
        <item name="colorPrimaryVariant">@color/gold_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/gold_200</item>
        <item name="colorSecondaryVariant">@color/gold_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black_700</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/black_700</item>
        <item name="colorSurface">@color/black_700</item>
        <item name="colorOnSurface">@color/text_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorSecondary">@color/text_gold</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MarFaNet.Button</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.MarFaNet.CardView</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.MarFaNet.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gold_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.MarFaNet.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>